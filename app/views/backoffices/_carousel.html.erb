            </svg>
          <% end %>
        </div>
      </div>
      <% end %>
    <% else %>
      Нету пола
    <% end %>
    <hr>
    <%= form_for :gender, url: genders_path do |f| %>
    <div class="row">
      <div class="col-6">
        <%= f.text_field :name, class:'form-control form-control-sm', placeholder:'На русском' %>
      </div>
      <div class="col-6">
        <%= f.text_field :name_tm, class:'form-control form-control-sm', placeholder:'На туркменском' %>
      </div>
      <br><br>
      <div class="col-6">
        <%= f.text_area :name, class:'form-control form-control-sm', placeholder:'На русском' %>
      </div>
      <div class="col-6">
        <%= f.text_area :name, class:'form-control form-control-sm', placeholder:'На русском' %>
      </div>
      <br><br><br><br>
      <div class="col-12">
        <center><%= f.file_field :image, class:'form-control form-control-sm' %></center>
      </div>
    </div>
      <p>


