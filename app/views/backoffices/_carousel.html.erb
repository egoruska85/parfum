      <p>

      </p>
      <center><%= f.submit 'Создать', class:"btn btn-primary", style:"--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem;" %></center>
    <% end %>
  </div>
