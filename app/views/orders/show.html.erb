<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body style="background: #F5F5DC;">
    <%= render "include/navbar" %>
    <div class="container">
      <div class="row">
        <div class="col-12 col-lg-6">
          <div class="shadow-lg p-3 mb-5 bg-body-tertiary rounded">
            <span class="btn btn-primary position-relative"><%= t('order.number') + "#{@order.id}" + t('order.date') + @order.created_at.strftime("%d.%m.%Y") %></span>
            <br><br>
            <div class="row">
              <div class="col-12">
                <% @order.order_items.each do |order_item| %>
                  <% product = order_item.product %>

                    <div class="row border border-primary rounded">

                        <div class="col-3 col-lg-2">
                          <div class="border" style="width: 85px; height: 85px;">
                            <img src="<%= rails_blob_url(product.image) %>" class="img-thumbnail" alt="...">
                          </div>
                        </div>
                        <div class="col-9 col-lg-10">
                          <p style="font-size: 13px;">
                            <%= product.name %>
                          </p>
                          <div class="row">
                            <div class="col-3 col-lg-6">
                              <b style="color: red;"><s><%= product.price.to_f %></s></b>
                              <span class="badge text-bg-primary"><%= order_item.product_discount %></span>
                            </div>
                            <div class="col-2 col-lg-1">
                              <%= form_with(url: cart_remove_path) do |f|%>
                                <%= f.hidden_field :id, value: order_item.id %>
                                <%= f.submit "X", class:"btn btn-danger btn-sm"%>
                              <% end %>
                            </div>
                            <div class="col-6 col-lg-5">
                              <%= form_with(model: order_item, url: order_order_item_path(@order, order_item), method: :patch, local: true) do |f|%>
                              <div class="row">
                                <div class="col-5 col-lg-3">
                                  <%= f.hidden_field :id, value: product.id %>
                                  <%= f.number_field :quantity, value: order_item.quantity, min: 0, style:"width: 45px;", class:"form-control form-control-sm" %>
                                </div>
                                <div class="col-3">
                                  <%= f.button class:"btn btn-success btn-sm" do %>
                                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                    <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z"/>
                                  </svg>
                                  <% end %>
                                <% end %>
                                </div>
                                <div class="col-2">
                                  <b style="color: red;"><s><%= order_item.total %></s></b>
                                  <span class="badge text-bg-success"><%= order_item.total_discount %></span>
                                </div>
                              </div>

                            </div>
                          </div>

                      </div>
                    </div>


                <% end %>
              </div>
              <hr>
              <div class="col-9 col-lg-10">
                <p>
                  <%= t('cart.positions') %><%= @order.order_items_count %>
                </p>
                <p>
                  <%= t('cart.count_products') %><%= @order.see_prodduct_quantity %>
                </p>
              </div>
              <div class="col-3 col-lg-2">
                <p style="color: red;"><s><%= @order.total %></s></p>
                <span class="badge text-bg-primary">
                  <p style="color: white; font-size: 20px;">
                    <%= @order.total_discount %>
                  </p>
                  <p>
                    <%= t('cart.prepaymet')%>
                  </p>
                </span>
              </div>
            </div>
          </div>
        </div>
        <div class="col-12 col-lg-6">
          <div class="shadow-lg p-3 mb-5 bg-body-tertiary rounded">
            <%= form_with(model: @order, url: user_ordered_order_path(@order), method: :patch, local: true) do |f|%>
            <div class="row">

                <div class="col-6 col-lg-4">
                  <div class="border rounded" style="background: #F5F5DC;">
                    <%= f.label t('order.name'), class:"form-label form-control-sm" %>
                    <%= f.text_field :username, class:"form-control form-control-sm", placeholder: t('order.name') %>
                  </div>
                </div>
                <div class="col-6 col-lg-4">
                  <div class="border rounded" style="background: #F5F5DC;">
                    <%= f.label t('order.phone'), class:"form-label form-control-sm" %>
                    <%= f.text_field :phone, class:"form-control form-control-sm", placeholder: t('order.phone'), value:'+' if @order.phone == nil %>
                    <%= f.text_field :phone, class:"form-control form-control-sm", placeholder: t('order.phone') if @order.phone != nil%>
                  </div>
                </div>
                <div class="col-6 col-lg-4">
                  <div class="border rounded" style="background: #F5F5DC;">
                    <%= f.label t('order.city'), class:"form-label form-control-sm" %>
                    <%= f.text_field :city, class:"form-control form-control-sm", placeholder: t('order.city') %>
                  </div>
                </div>
                <div class="col-6 col-lg-4">
                  <div class="border rounded" style="background: #F5F5DC;">
                    <%= f.label t('order.district'), class:"form-label form-control-sm" %>
                    <%= f.text_field :district, class:"form-control form-control-sm", placeholder: t('order.district') %>
                  </div>
                </div>
                <div class="col-6 col-lg-4">
                  <div class="border rounded" style="background: #F5F5DC;">
                    <%= f.label t('order.street'), class:"form-label form-control-sm" %>
                    <%= f.text_field :street, class:"form-control form-control-sm", placeholder: t('order.street') %>
                  </div>
                </div>
                <div class="col-6 col-lg-4">
                  <div class="border rounded" style="background: #F5F5DC;">
                    <%= f.label t('order.house'), class:"form-label form-control-sm" %>
                    <%= f.text_field :house, class:"form-control form-control-sm", placeholder: t('order.house') %>
                  </div>
                </div>
                <div class="col-6 col-lg-4">
                  <div class="border rounded" style="background: #F5F5DC;">
                    <%= f.label t('order.flat'), class:"form-label form-control-sm" %>
                    <%= f.text_field :flat, class:"form-control form-control-sm", placeholder: t('order.flat') %>
                  </div>
                </div>
                <div class="col-6 col-lg-4">
                  <div class="border rounded" style="background: #F5F5DC;">
                    <%= f.label t('order.post_code'), class:"form-label form-control-sm" %>
                    <%= f.text_field :post_code, class:"form-control form-control-sm", placeholder: t('order.post_code') %>
                  </div>
                </div>
                <div class="col-6 col-lg-4">
                  <br>
                  <div class="border rounded" style="background: #F5F5DC;">
                    <%= f.hidden_field :ordered, value: true %>
                    <center>
                      <b>></b>
                      <%= f.button class:"btn btn-success btn-sm" do %>
                        <%= t('order.order')%>
                      <% end %>
                      <b><</b>

                    </center>
                  </div>
                </div>


              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
